# Maintainer: missing

pkgname=ipfs
pkgver=${PACKAGE_VERSION}
pkgrel=1
pkgdesc="IPFS with telemetry"
license=(MIT)
arch=('x86_64')
url="https://github.com/diogo464/telemetry"
provides=('ipfs')
conflicts=()
depends=(traceroute)
source=(ipfs ipfs.service)
sha256sums=('${PACKAGE_ARCHLINUX_SHA256_IPFS}'
            '${PACKAGE_ARCHLINUX_SHA256_IPFS_SERVICE}')

package() {
  install --directory "${pkgdir}/usr/lib/systemd/user"
  install --directory "${pkgdir}/usr/bin"

  install --mode 644 ipfs.service "${pkgdir}/usr/lib/systemd/user"
  install --mode 755 ipfs "${pkgdir}/usr/bin"
}

